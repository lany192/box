<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.lany192.box.sample">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".SampleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.settings.feedback.FeedbackActivity"
            android:exported="false"
            android:label="反馈"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ui.download.DownloadActivity"
            android:exported="false"
            android:label="下载"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="设置"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ui.browser.BrowserActivity"
            android:exported="false"
            android:label="浏览器"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false"
            android:label="主界面"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false"
            android:label="登录"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".ui.settings.about.AboutActivity"
            android:exported="false"
            android:label="关于"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".router.SchemeFilterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="box" />
                <data android:scheme="android" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:label="启动页"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>