<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--文字是否加 中等粗-->
    <attr name="text_middle_bold" format="boolean" />

    <declare-styleable name="BoxTextView">
        <attr name="text_middle_bold" />
    </declare-styleable>

    <declare-styleable name="BoxButton">
        <attr name="text_middle_bold" />
    </declare-styleable>

    <declare-styleable name="IconTextView">
        <!-- Icon drawable to display at the start of this view. -->
        <attr name="itv_icon" format="reference" />
        <!-- Specifies the width and height to use for the icon drawable. -->
        <attr name="itv_icon_size" format="dimension" />
        <!-- Tint for icon drawable to display. -->
        <attr name="itv_icon_tint" format="color" />
        <!-- Tint mode for icon drawable to display. -->
        <attr name="itv_icon_tint_mode">
            <!-- The tint is drawn on top of the icon.
                 [Sa + (1 - Sa)*Da, Rc = Sc + (1 - Sa)*Dc] -->
            <enum name="src_over" value="3" />
            <!-- The tint is masked by the alpha channel of the icon. The icon’s
                 color channels are thrown out. [Sa * Da, Sc * Da] -->
            <enum name="src_in" value="5" />
            <!-- The tint is drawn above the icon, but with the icon’s alpha
                 channel masking the result. [Da, Sc * Da + (1 - Sa) * Dc] -->
            <enum name="src_atop" value="9" />
            <!-- Multiplies the color and alpha channels of the icon with those of
                 the tint. [Sa * Da, Sc * Dc] -->
            <enum name="multiply" value="14" />
            <!-- [Sa + Da - Sa * Da, Sc + Dc - Sc * Dc] -->
            <enum name="screen" value="15" />
            <!-- Combines the tint and icon color and alpha channels, clamping the
                 result to valid color values. Saturate(S + D) -->
            <enum name="add" value="16" />
        </attr>
        <!-- Padding between icon and button text. -->
        <attr name="itv_icon_padding" format="dimension" />
        <!-- Specifies how the icon should be positioned on the X axis. -->
        <attr name="itv_icon_gravity">
            <!-- Push icon to the start of the button. -->
            <flag name="start" value="0x1" />
            <!-- Push the icon to the start of the text keeping a distance equal to
                 {@code iconPadding} from the text. -->
            <flag name="textStart" value="0x2" />
            <!-- Push icon to the end of the button. -->
            <flag name="end" value="0x3" />
            <!-- Push the icon to the end of the text keeping a distance equal to
                 {@code iconPadding} from the text. -->
            <flag name="textEnd" value="0x4" />
            <!-- Push the icon to the top of the button. -->
            <flag name="top" value="0x10" />
            <!-- Push the icon to the top of the text keeping a distance equal to
                 {@code iconPadding} from the text. -->
            <flag name="textTop" value="0x20" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SpanTextView">
        <attr name="selected_text" format="string|reference" />
        <attr name="selected_text_color" format="color|reference" />
        <attr name="selected_under_line" format="boolean|reference" />
        <attr name="selected_clickable" format="boolean|reference" />
        <attr name="selected_strike_through" format="boolean|reference" />
        <attr name="selected_background_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ApproveListLayout">
        <attr name="pic_count" format="integer" />
        <attr name="pic_size" format="dimension" />
        <attr name="pic_offset" format="float" />
    </declare-styleable>

    <declare-styleable name="RepeatScrollView">
        <!-- 轮播背景图 -->
        <attr name="src" format="reference" />
        <!-- 滚动一屏时间 单位ms -->
        <attr name="scroll_screen_time" format="float" />
    </declare-styleable>

    <!-- 比例图片视图属性 -->
    <declare-styleable name="RatioRoundImageView">
        <attr name="image_ratio" format="float" />
        <attr name="image_roundRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MenuView">
        <attr name="menu_icon" format="color|reference" />
        <attr name="menu_icon_size" format="float|dimension" />

        <attr name="menu_title" format="string|reference" />
        <attr name="menu_title_color" format="reference|color" />
        <attr name="menu_title_size" format="dimension" />

        <attr name="menu_subtitle" format="string|reference" />
        <attr name="menu_subtitle_color" format="color|reference" />
        <attr name="menu_subtitle_size" format="float|dimension" />

        <attr name="menu_hint" format="string|reference" />
        <attr name="menu_hint_color" format="color|reference" />
        <attr name="menu_hint_size" format="float|dimension" />
        <attr name="menu_arrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RealtimeBlurView">
        <attr name="realtimeBlurRadius" format="dimension|reference" />
        <attr name="realtimeDownsampleFactor" format="float|reference" />
        <attr name="realtimeOverlayColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="clear_drawable" format="reference" />
        <attr name="clear_size" format="dimension|integer" />
        <attr name="left_drawable" format="reference" />
        <attr name="left_size" format="dimension|integer" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="riv_ratio" format="float|reference" />
    </declare-styleable>
</resources>