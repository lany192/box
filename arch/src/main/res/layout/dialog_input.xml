<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_dialog_bg"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_input_close_btn"
            android:layout_width="60dp"
            android:layout_height="@dimen/actionbar_height"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@android:string/cancel"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_input_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提示"
            android:textColor="#333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dialog_input_ok_btn"
            android:layout_width="60dp"
            android:layout_height="@dimen/actionbar_height"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="@android:string/ok"
            android:textColor="#555555"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_input_input_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/editor_bg"
        android:gravity="left|top"
        android:hint="请输入内容"
        android:minHeight="120dp"
        android:padding="10dp"
        android:textColor="#555555"
        android:textColorHint="#999999"
        android:textSize="14sp" />
</LinearLayout>