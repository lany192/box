<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.lany192.scanner.ViewfinderView
        android:id="@+id/viewfinderView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:labelText="将码放入框内，即可自动扫描"
        app:labelTextLocation="bottom"
        app:labelTextSize="12sp" />

    <ImageView
        android:id="@+id/ivFlashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/zxl_flashlight_margin_top"
        android:src="@drawable/zxl_flashlight_selector" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="36dp"
        android:background="?android:attr/actionBarItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/vector_back_white" />

    <ImageButton
        android:id="@+id/phonePicker"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:layout_marginTop="36dp"
        android:layout_gravity="right"
        android:background="?android:attr/actionBarItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/vector_pic_white" />
</FrameLayout>