        <item name="toolbar">@style/Toolbar.Zhihu</item>
        <item name="album.dropdown.title.color">@color/text_2level</item>
        <item name="album.dropdown.count.color">@color/text_3level</item>
        <item name="album.element.color">@color/white</item>
